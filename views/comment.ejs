            <form action="/logout" method="POST">
                <button class="btn-logout"type="submit">Logout</button>
            </form>
        </ul>
        <section id="section-1">
    <a class="return" href="/book">⬅️</a>
    <div class="book-container" id="bookContainer">

    <div class="book-details">
        <h2 class="title"><%= books.title %></h2>
        <p>Author: <%= books.author %></p>
        <% const matchedType = types.find(type => type.typeid === books.typeid); %>
                    <% if (matchedType) { %>
        <div class="type">Type: <%= matchedType.type %></div>
                    <% } %>
    </div>
    <img  src=".<%= books.image %>"/>
    
   
    <a id="scroll-btn" href="#section-2"></a>
</section id="section-2">
    
</div>
    <section id="section-2">
        <div class="comment">
            <form action="/comment/<%= books.bookid %>" method="POST">
            
                <textarea id="comment" name="comment" rows="4" cols="50">
                    
                </textarea><br>
                <input class="btn" type="submit" value="Submit">
            </form>
        </div>
        <h3 class="comments-list">Comments</h3>
        <div class="myBox"">
            
            
                    <% comments.forEach(comment => { %>
                        <div class="usernamef"><%= comment.username %>:</div> <br>
                        <diV class="commentf"><%= comment.comment %></diV>
                        <p>_______________________________________________________________________________________</p>
                    <% }); %>
      </section>
    <script>
        function removeSpaces() {
          var textInput = document.getElementById('comment');
          var textWithoutSpaces = textInput.value.replace(/\s/g, ''); // ใช้ regular expression เพื่อลบช่องว่างทั้งหมด
          textInput.value = textWithoutSpaces;
        }
    </script>
</body>
